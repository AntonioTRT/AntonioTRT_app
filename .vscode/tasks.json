{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run App (Qt)",
      "type": "shell",
      "command": "${workspaceFolder}\\.venv\\Scripts\\python.exe",
      "args": ["-B", "${workspaceFolder}\\main.py"],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    },
    {
      "label": "Create venv (first time)",
      "type": "shell",
      "command": "python",
      "args": ["-m", "venv", ".venv"],
      "presentation": {
        "echo": true,
        "reveal": "always"
      }
    },
    {
      "label": "Install deps",
      "type": "shell",
      "command": "${workspaceFolder}\\.venv\\Scripts\\python.exe",
      "args": ["-m", "pip", "install", "-r", "requirements.txt"],
      "presentation": {
        "echo": true,
        "reveal": "always"
      }
    }
  ]
}
